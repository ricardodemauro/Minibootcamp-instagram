@model IEnumerable<DotnetCamp.Instagram.DTO.PictureDTO>

@{
    ViewData["Title"] = "View";
}

<header id="header">
    <h1>INSTAGRAM</h1>
    <p>Display your Instagram photos on your website with a little Javascript.</p>
</header>

<section class="actions">
    <a asp-controller="Me" asp-action="Upload" class="btn btn-default">Upload</a>
</section>

<section id="content">
    @foreach (var item in Model)
    {
        <a href="#" class="post">
            <div class="image" style="background-image:url('@item.PicIdentity');"></div>
            <ul>
                <li><i class="fa fa-camera"></i>Normal</li>
                <li><i class="fa fa-heart"></i>5</li>
                <li><i class="fa fa-comment"></i>0</li>
            </ul>
        </a>
    }
</section>
